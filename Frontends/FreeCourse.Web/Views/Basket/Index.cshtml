@model BasketViewModel
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Sepet</h5>
                @if (Model != null && Model.BasketItems.Any())
                {
                    <table class="table table-striped">
                        <tr>
                            <th>Kurs İsim</th>
                            <th>Kurs Fiyat</th>
                            <th>İşlemler</th>
                        </tr>
                        @foreach (var item in Model.BasketItems)
                        {
                            <tr>
                                <td>@item.CourseName</td>
                                <td>@item.GetCurrentPrice TL @(Model.HasDiscount ? $"(%{Model.DiscountRate.Value} Uygulandı)":"")</td>
                                <td><a asp-controller="Basket" asp-action="RemoveBasketItem" asp-route-courseId="@item.CourseId" class="btn btn-danger">Sil</a></td>
                            </tr>
                        }
                        @if (Model.HasDiscount)
                        {
                            <tr>
                                <td>Indirim Oranı</td>
                                <th colspan="2">% @Model.DiscountRate.Value</th>
                            </tr>
                        }
                        <tr>
                            <td>@(Model.HasDiscount?"İndirimli Fiyat":"Toplam Fiyat")</td>
                            <th colspan="2">@Model.TotalPrice TL</th>
                        </tr>
                    </table>
                    <form asp-controller="Basket" asp-action="ApplyDiscount">
                        @if (Model.HasDiscount)
                        {
                            <div class="alert alert-success">
                                "@Model.DiscountCode" indirim kodu uygulandı
                                <a asp-controller="Basket" asp-action="CancelAppliedDiscount">(İptal Et)</a>
                            </div>

                        }
                        @if (TempData["discountStatus"] != null && (bool)TempData["discountStatus"] == false)
                        {
                            <div class="alert alert-danger">İndirim kodu geçersiz</div>
                        }
                        <div class="input-group mb-3">
                            <input class="form-control" type="text" name="DiscountApplyInput.Code" />
                            <button type="submit" class="btn btn-outline-secondary">Uygula</button>
                        </div>
                        @if (TempData["discountError"] != null)
                        {
                            <div class="alert alert-danger">@TempData["discountError"]</div>
                        }
                    </form>
                }
                else
                {
                    <div class="alert alert-info">Sepet Boş</div>
                }
            </div>
        </div>
    </div>
</div>